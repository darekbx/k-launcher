        android:id="@+id/antistorm_image_1"
        android:layout_width="@dimen/antistorm_size"
        android:layout_height="@dimen/antistorm_size"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:alpha="0.2"
        />
    <ImageView
        android:id="@+id/antistorm_image_2"
        android:layout_width="@dimen/antistorm_size"
        android:layout_height="@dimen/antistorm_size"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        />
    <ImageView
        android:id="@+id/antistorm_image_3"
        android:layout_width="@dimen/antistorm_size"
        android:layout_height="@dimen/antistorm_size"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        />
    <RelativeLayout
        android:id="@+id/warszawa"
        android:layout_width="2dp"
        android:layout_height="2dp"
        android:layout_marginTop="365dp"
        android:layout_marginLeft="242dp"
        android:background="@drawable/bg_dot"
        />
    <RelativeLayout
        android:id="@+id/biala_podlska"
        android:layout_width="2dp"
        android:layout_height="2dp"
        android:layout_marginTop="369dp"
        android:layout_marginLeft="274dp"
        android:background="@drawable/bg_dot"
        />
    <RelativeLayout
        android:id="@+id/debki"
        android:layout_width="2dp"
        android:layout_height="2dp"
        android:layout_marginTop="302dp"
        android:layout_marginLeft="202dp"
        android:background="@drawable/bg_dot"
        />

</RelativeLayout>
