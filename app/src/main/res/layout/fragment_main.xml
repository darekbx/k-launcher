<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.klauncher.ui.MainActivity">

    <TextView
        android:id="@+id/screen_on_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        style="@style/TinyText"
        tools:text="Screen on"
        />

    <TextView
        android:id="@+id/sunrise_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/screen_on_text"
        style="@style/TinyText"
        tools:text="Sunrise"
        />

    <TextView
        android:id="@+id/sunset_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/sunrise_text"
        style="@style/TinyText"
        tools:text="Sunset"
        />

    <com.klauncher.ui.main.zm.PollutionView
        android:id="@+id/pollution_pm10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:gravity="right"
        style="@style/TinyText"
        />
    <com.klauncher.ui.main.zm.PollutionView
        android:id="@+id/pollution_pm25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/pollution_pm10"
        android:layout_marginRight="@dimen/small_margin"
        android:gravity="right"
        style="@style/TinyText"
        />
    <TextView
        android:id="@+id/pollution_location_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:gravity="right"
        android:layout_below="@id/pollution_pm25"
        style="@style/TinyText"
        tools:text="Pollution info"
        />

    <TextView
        android:id="@+id/if_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/small_margin"
        android:gravity="right"
        android:layout_below="@id/pollution_location_info"
        style="@style/TinyText"
        tools:text="IF temp"
        />
    <TextView
        android:id="@+id/if_wind_chill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/small_margin"
        android:gravity="right"
        android:layout_below="@id/if_temperature"
        style="@style/TinyText"
        tools:text="IF wind"
        />

    <ImageView
        android:id="@+id/if_temperature_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/small_margin"
        android:gravity="right"
        android:layout_below="@id/if_wind_chill"
        />
    <ImageView
        android:id="@+id/if_wind_chill_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/small_margin"
        android:gravity="right"
        android:layout_below="@id/if_temperature_image"
        />

    <com.klauncher.ui.main.airly.AirlyMapViewAdapter
        android:id="@+id/airly_map"
        android:layout_width="220dp"
        android:layout_height="84dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/sunset_text"
        />

    <com.klauncher.ui.main.RefreshCountDown
        android:id="@+id/refresh_count_down"
        android:layout_width="2dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/airly_map"
        android:layout_alignBottom="@id/airly_map"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="8dp"
        />

    <TextView
        android:id="@+id/limits_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/small_margin"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/airly_map"
        android:textColor="#888"
        style="@style/TinyText"
        tools:text="Limits"
        />

    <LinearLayout
        android:id="@+id/drawable_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="-66px"
        >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/content_bottom_buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/round_button_margin"
        android:orientation="horizontal"
        android:gravity="right">
        <ImageButton
            android:id="@+id/button_phone"
            android:src="@drawable/btn_phone"
            style="@style/RoundButton"
            android:onClick="openDialer"
            />
        <TextView
            android:id="@+id/dot_count"
            android:text="9"
            style="@style/RoundButton"
            android:background="@drawable/btn_dot"
            android:onClick="openDots"
            />
        <ImageButton
            android:id="@+id/button_sms"
            android:src="@drawable/btn_sms"
            style="@style/RoundButton"
            android:onClick="openMessages"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/antistorm_image_1"
        android:layout_width="@dimen/antistorm_size"
        android:layout_height="@dimen/antistorm_size"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:alpha="0.2"
        />
    <ImageView
        android:id="@+id/antistorm_image_2"
        android:layout_width="@dimen/antistorm_size"
        android:layout_height="@dimen/antistorm_size"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        />
    <ImageView
        android:id="@+id/antistorm_image_3"
        android:layout_width="@dimen/antistorm_size"
        android:layout_height="@dimen/antistorm_size"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        />
    <RelativeLayout
        android:layout_width="2dp"
        android:layout_height="2dp"
        android:layout_marginTop="255dp"
        android:layout_marginLeft="215dp"
        android:background="@drawable/bg_dot"
        />
    <RelativeLayout
        android:layout_width="2dp"
        android:layout_height="2dp"
        android:layout_marginTop="259dp"
        android:layout_marginLeft="248dp"
        android:background="@drawable/bg_dot"
        />

</RelativeLayout>
